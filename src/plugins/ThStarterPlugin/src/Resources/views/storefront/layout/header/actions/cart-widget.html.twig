{% block layout_header_actions_cart_widget %}
    <span class="header-cart-icon">
        {% sw_icon 'bag' %}
    </span>

    {% if (page.cart.lineItems.elements| length) > 0 %}

        <span class="badge bg-primary header-cart-badge" style="display:block !important">{{ page.cart.lineItems.elements| length }}</span>
    {% endif %}
    <span class="header-cart-total">
        <!--
        {{ page.cart.price.positionPrice|currency }}{{ "general.star"|trans|sw_sanitize }}
        -->
    </span>
{% endblock %}
